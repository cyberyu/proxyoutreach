{
    "family": "proxy-outreach-efs",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
    "volumes": [
        {
            "name": "efs-storage",
            "efsVolumeConfiguration": {
                "fileSystemId": "fs-07c9b65956846dd51",
                "rootDirectory": "/dumps",
                "transitEncryption": "ENABLED",
                "authorizationConfig": {
                    "accessPointId": "",
                    "iam": "DISABLED"
                }
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "proxy-outreach",
            "image": "YOUR_ECR_REPO/proxy-outreach:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "efs-storage",
                    "containerPath": "/usr/src/app/data/dumps",
                    "readOnly": true
                }
            ],
            "environment": [
                {
                    "name": "SQL_DUMP_PATH",
                    "value": "/usr/src/app/data/dumps/proxy_complete_dump.sql"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "DATABASE_HOST",
                    "value": "your-rds-endpoint"
                },
                {
                    "name": "DATABASE_NAME",
                    "value": "proxy"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/proxy-outreach",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
